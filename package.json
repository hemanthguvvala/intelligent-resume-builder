{
  "name": "intelligent-resume-builder",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://hemanthguvvala.github.io/intelligent-resume-builder",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:proxy\"",
    "dev:vite": "vite",
    "dev:proxy": "ts-node --transpile-only server/index.ts",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "predeploy": "npm run typecheck && npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@tiptap/extension-underline": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.4.5",
    "html-to-text": "^9.0.5",
    "html2pdf.js": "^0.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.395.0",
    "mammoth": "^1.7.2",
    "pdfjs-dist": "^4.4.168",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/lodash": "^4.17.4",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "gh-pages": "^6.1.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}